<apex:page controller="QueryBuilderController">
<apex:pageMessages id="pageMsg"></apex:pageMessages>
    <apex:form id="formId">
        <apex:pageBlock >
            <apex:pageBlockSection >
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Select Object"/>
                    <apex:selectList size="1" value="{!selectedObj}">  
                        <apex:selectOptions value="{!objects}"/>  
                            <apex:actionSupport event="onchange" action="{!details}" reRender="formId,pageMsg"/> 
                    </apex:selectList>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
            <apex:pageBlockSection rendered="{!isObjSelected}">
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Select Fields"/>
                    <apex:panelGrid columns="3">
                        <apex:panelGroup style="width:40%">
                            <apex:selectList value="{!selectFields}" multiselect="true" style="width:120px;height:120px;">
                                <apex:selectOptions value="{!feildOptions}"/>
                            </apex:selectList>
                        </apex:panelGroup>
                        <apex:panelGroup style="width:20%;height:120px;">
                            <table height="120px">
                                <tr><td><apex:commandButton value="Add" action="{! addFields}" style="width:80px;" reRender="formId,pageMsg"/></td></tr>
                                <tr><td><apex:commandButton value="Remove" action="{! removeFields}" style="width:80px;" reRender="formId,pageMsg"/></td></tr>
                            </table>
                        </apex:panelGroup>
                        <apex:panelGroup >
                            <apex:selectList value="{!selectedFields}" multiselect="true" style="width:120px;height:120px;">
                                <apex:selectOptions value="{!selectedFieldOptions}"/>
                            </apex:selectList>
                        </apex:panelGroup>
                    </apex:panelGrid>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
            <apex:pageBlockSection rendered="{!isObjSelected}">
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Select Limit"/>
                    <apex:panelGrid columns="2">
                        <apex:panelGroup style="width:70%">
                            <apex:selectList value="{!selectedLimit}" size="1" multiselect="false">
                                <apex:selectOptions value="{!limitOptions}"/>
                            </apex:selectList>
                        </apex:panelGroup>
                        <apex:panelGroup style="width:30%">
                            <apex:outputLabel value="Sort As"/>
                            <apex:selectRadio value="{!selectedOrder}">    
                                <apex:selectOptions value="{!orderOptions}"/><br/>
                            </apex:selectRadio>
                        </apex:panelGroup>
                    </apex:panelGrid>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
            <apex:pageBlockSection rendered="{!isObjSelected}">
                <p>
                <apex:pageBlockSectionItem >
                    <apex:commandButton value="Execute" action="{!queryData}" reRender="formId,pageMsg" style="width:80px;"/>
                </apex:pageBlockSectionItem>
                </p>
            </apex:pageBlockSection>
            <apex:pageBlockSection rendered="{!isQueryExecuted}">
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="SOQL Query"/>
                    <apex:panelGrid >
                        <apex:outputLabel value="{!query}"/>
                    </apex:panelGrid>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
            <apex:pageBlockSection rendered="{!isQueryExecuted}">
                <apex:pageBlockSectionItem >
                   <apex:pageBlockTable value="{!dataFromQuery}" var="objData">
                       <apex:repeat value="{!fieldsTobeRetrieved}" var="fieldName">
                           <apex:column value="{!objData[fieldName]}"/>
                       </apex:repeat>
                   </apex:pageBlockTable>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>